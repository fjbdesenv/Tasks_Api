  "components": {
    "schemas": {
      "Usuario": {
        "type": "object",
        "required": [
          "nome",
          "email",
          "senha"
        ],
        "properties": {
          "nome": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "senha": {
            "type": "string"
          }
        },
        "example": {
          "nome": "Ana Paula de Oliveira",
          "email": "ana@email.com",
          "senha": "alterarSenha"
        }
      },
      "Tarefa": {
        "type": "object",
        "required": [
          "nome",
          "descricao",
          "data"
        ],
        "properties": {
          "nome": {
            "type": "string"
          },
          "descricao": {
            "type": "string"
          },
          "status": {
            "type": "number"
          },
          "data": {
            "type": "string"
          },
          "horarioInicio": {
            "type": "string"
          },
          "horarioFim": {
            "type": "string"
          }
        },
        "example": {
          "nome": "Corre",
          "descricao": "Corrida matinal",
          "status": 2,
          "data": "05/11/2023",
          "horarioInicio": "10:00",
          "horarioFim": "11:00"
        }
      },
      "Auth": {
        "type": "object",
        "required": [
          "senha",
          "email"
        ],
        "properties": {
          "senha": {
            "type": "string"
          },
          "email": {
            "type": "string"
          }
        },
        "example": {
          "senha": "minhaSenha",
          "email": "meuEmail@email.com"
        }
      },
      "Token": {
        "type": "object",
        "required": [
          "token"
        ],
        "properties": {
          "token": {
            "type": "string"
          }
        },
        "example": {
          "token": "meuToken645D6FF6556G678YHU"
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "responses": {
      "401": {
        "description": "Não autorizado",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              },
              "example": {
                "message": "Não foi possivel fazer a autenticação"
              }
            }
          }
        }
      },
      "403": {
        "description": "Forbidden",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              },
              "example": {
                "message": "Não é possivel acessar esse recurso"
              }
            }
          }
        }
      },
      "404": {
        "description": "Item não encontrado",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              },
              "example": {
                "message": "Registro não encontrado"
              }
            }
          }
        }
      },
      "500": {
        "description": "Erro interno no servidor",
