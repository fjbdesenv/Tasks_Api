  "components": {
    "schemas": {
      "Usuario": {
        "type": "object",
        "required": [
          "nome",
          "email",
          "senha",
          "roles"
        ],
        "properties": {
          "nome": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "senha": {
            "type": "string"
          },
          "roles": {
            "items": {
              "type": "string"
            }
          }
        },
        "example": {
          "nome": "Usuario de teste",
          "email": "email@teste.com",
          "senha": "U2FsdGVkX1+t4KBM8XHYHkbGcn2F8XQx6Pq2oxum8Jo=",
          "roles": [
            "ROLE_USER",
            "ROLE_ADM"
          ]
        }
      },
      "Tarefa": {
        "type": "object",
        "required": [
          "nome",
          "descricao",
          "data"
        ],
        "properties": {
          "_id": {
            "type": "integer"
          },
          "nome": {
            "type": "string"
          },
          "descricao": {
            "type": "string"
          },
          "status": {
            "type": "number"
          },
          "data": {
            "type": "string"
          },
          "horarioInicio": {
            "type": "string"
          },
          "horarioFim": {
            "type": "string"
          }
        },
        "example": {
          "_id": 1,
          "nome": "Corre",
          "descricao": "Corrida matinal",
          "status": 2,
          "data": "05/11/2023",
          "horarioInicio": "10:00",
          "horarioFim": "11:00"
        }
      },
      "Auth": {
        "type": "object",
        "required": [
          "email",
          "senha"
        ],
        "properties": {
          "email": {
            "type": "string"
          },
          "senha": {
            "type": "string"
          }
        },
        "example": {
          "email": "email@teste.com",
          "senha": "senha"
        }
      },
      "Token": {
        "type": "object",
        "required": [
          "token"
        ],
        "properties": {
          "token": {
            "type": "string"
          }
        },
        "example": {
          "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJfaWQiOjIsInJvbGVzIjpbIlJPTEVfVVNFUiJdLCJpYXQiOjE3MDA0Mjk3ODJ9.__VSjloKXbMQp82gidga-rhDWsZNQX3BB7p2FYmfbGs"
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "parameters": {
      "id": {
        "in": "path",
        "name": "id",
        "required": true,
        "schema": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "responses": {
      "401": {
        "description": "Não autorizado",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              },
              "example": {
                "message": "Não foi possivel fazer a autenticação."
              }
            }
          }
        }
      },
      "403": {
        "description": "Forbidden",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              },
              "example": {
                "message": "Não é possivel acessar esse recurso."
              }
            }
          }
        }
      },
      "404": {
        "description": "Item não encontrado",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              },
              "example": {
                "message": "Registro não encontrado."
              }
            }
          }
        }
      },
      "500": {
        "description": "Erro interno no servidor",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
